@model MarioAndresJaramillo.Models.Turno

@{
    ViewData["Title"] = "Actualizar";
}

<h2>Actualizar turno</h2>

<form asp-action="Actualizar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Cédula:</label>
        <input class="form-control" asp-for="Cedula" readonly />
    </div>

    <div class="form-group">
        <label>Fecha:</label>
        <input class="form-control" asp-for="Fecha" readonly />
    </div>

    <div class="form-group">
        <label>Atendido:</label>
        <input type="checkbox" class="form-control" asp-for="Atendido" />
    </div>

    <button type="submit" class="btn btn-primary">Actualizar turno</button>
</form>

<a href="@Url.Action(nameof(Index))">Volver</a>
